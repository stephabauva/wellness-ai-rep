{
  "validation": {
    "components": {
      "checkExistence": true,
      "validateDependencies": true,
      "checkUnusedComponents": false
    },
    "apis": {
      "checkHandlerFiles": true,
      "validateSchemas": false,
      "checkOrphanedEndpoints": true
    },
    "flows": {
      "validateSteps": true,
      "checkComponentCapabilities": true,
      "validateApiCalls": true
    },
    "references": {
      "resolveSystemMapRefs": true,
      "validateFileReferences": true
    }
  },
  "scanning": {
    "includePatterns": [
      "src/**/*",
      "client/**/*",
      "server/**/*",
      "shared/**/*"
    ],
    "excludePatterns": [
      "node_modules/**/*",
      "dist/**/*",
      "build/**/*",
      "coverage/**/*",
      ".git/**/*"
    ],
    "fileExtensions": [
      ".ts",
      ".tsx",
      ".js",
      ".jsx"
    ]
  },
  "reporting": {
    "format": "console",
    "verbose": false,
    "showSuggestions": true
  },
  "performance": {
    "maxExecutionTime": 30000,
    "parallel": false,
    "cacheEnabled": true
  }
}